<?xml version="1.0" encoding="utf-8"?>
                                                                   
    
                 
                            
                                                                                
                                          
           
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/activity_login_0" xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/background"
            android:id="@+id/actionBar"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="14dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/imgBack"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_back"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtBack"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:layout_marginStart="4dp"
                    android:id="@+id/txtBack"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/imgBack"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txtSignup"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:id="@+id/txtTitleLogin"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"/>
            </RelativeLayout>

        </RelativeLayout>
        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_below="@id/actionBar"
            android:layout_height="match_parent" />
    </RelativeLayout>
         