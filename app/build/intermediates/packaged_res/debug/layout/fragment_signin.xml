<?xml version="1.0" encoding="utf-8"?>
                                                                   
    
                 
                                  
                                                                                  
                                          
           
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical" android:tag="layout/fragment_signin_0" xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="55dp"
            android:layout_marginTop="109dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_layout_signup">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="info@weara.jp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:padding="15dp"/>
        </RelativeLayout>
        <Button
            android:layout_width="230dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_height="55dp"
            android:text="@string/txtSignin"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:tag="binding_1"                                
            android:id="@+id/btnSignin"
            android:background="@drawable/custom_btn_home"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="47dp"
            android:layout_marginLeft="35dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginRight="35dp"
            android:orientation="horizontal">
            <View
                android:layout_width="133dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"
                android:textSize="16sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/white"/>
            <View
                android:layout_width="133dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/white"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtLoginWithYourUser"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="38.5dp"/>

        <RelativeLayout
            android:layout_width="260dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_btn_home">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="26dp"
                android:id="@+id/imgGoolge"
                android:layout_centerVertical="true"
                android:src="@drawable/google"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtSigninWithGoogle"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/imgGoolge"
                android:textSize="19sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="23.7sp"
                android:textStyle="bold"/>
        </RelativeLayout>

    </LinearLayout>
         